<!--
Defines a custom "assmembly descriptor" for uber jars
so that maven doesn't choke on "cli" being
an unknown classifier when deploying to a maven repo.

(Deploying uber jars to maven repos isn't necessarily
best practices, but it does give us a centralized
location for downloading binaries.)
-->
<assembly>
	<id>full</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
		</fileSet>
	</fileSets>
</assembly>